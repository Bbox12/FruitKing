<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:id="@+id/platter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/collapse_round_corner"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    android:paddingTop="56dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:background="@android:color/transparent"
            android:minHeight="128dp"
            android:padding="5dp">

            <RelativeLayout
                android:id="@+id/rl51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/white"
                android:minHeight="128dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="64dp"
                    android:layout_marginLeft="64dp"
                    android:layout_weight="0.7"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:lines="2"
                    android:maxLines="2"
                    android:minHeight="32dp"
                    android:minEms="4"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:visibility="visible" />
            </RelativeLayout>


        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/c1"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="start|left|center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="12dp"
            custom:cardCornerRadius="12dp"
            custom:cardElevation="0dp"
            custom:contentPadding="0.5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="start|center_vertical"
                android:visibility="visible">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/service_pic1"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/black"
                    android:scaleType="fitXY"
                    android:scrollbarSize="0dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/_details1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/c1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto"
            android:gravity="start|top"
            android:inputType="textMultiLine|textNoSuggestions"
            android:lines="5"
            android:minHeight="32dp"
            android:minEms="4"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/enquiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/_details1"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_success"
            android:ems="12"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:text="Enquiry"
            android:textColor="#ffffffff" />
    </RelativeLayout>

</LinearLayout>